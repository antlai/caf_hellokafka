{
    "name" : "ca",
    "components" : [
        {
            "module": "caf_react#plug_ca",
            "name": "react",
            "description": "Manages background rendering for this CA.",
            "env" : {
                "maxRetries" : "$._.env.maxRetries",
                "retryDelay" : "$._.env.retryDelay",
                "coinPlayTime" : "process.env.COIN_PLAY_TIME||900"
            },
            "components" : [
                {
                    "module": "caf_react#proxy",
                    "name": "proxy",
                    "description": "Provides the background rendering API.",
                    "env" : {

                    }
                }
            ]
        },
        {
            "module": "caf_kafka#plug_ca",
            "name": "kafka",
            "description": "Manages a kafka service for a CA",
            "env" : {
                "maxRetries" : "$._.env.maxRetries",
                "retryDelay" : "$._.env.retryDelay"
            },
            "components" : [
                {
                    "module": "caf_kafka#proxy",
                    "name": "proxy",
                    "description": "Allows access to a kafka service",
                    "env" : {
                    }
                }
            ]
        },
        {
            "name": "handler",
            "components" : [
                {
                    "name": "props",
                    "env" : {
                        "targetFQN": "process.env.TARGET_FQN||root-hellokafkahelper#demo-admin",
                        "targetMethod": "process.env.TARGET_METHOD||change"
                    }
                }
            ]
        }
    ]
}
